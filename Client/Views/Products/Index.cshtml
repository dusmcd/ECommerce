@model List<Client.Models.ProductViewModel>

<h1>Products</h1>
<div class="container text-center">

    <div class="row">
        @foreach(var product in Model)
        {
            <div class="col-sm-12 col-md-6 col-lg-4 mb-3">
                <div class="card">
                    <img src="https://images.pexels.com/photos/33597/guitar-classical-guitar-acoustic-guitar-electric-guitar.jpg" class="card-img-top" alt="" />
                    <div class="card-body">
                        <h3>@Html.DisplayFor(item => product.Name)</h3>
                        <p>$@Html.DisplayFor(i => product.Price)</p>
                        <a href="/Products/Details/@product.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>    
        }
    </div>

</div>
    
